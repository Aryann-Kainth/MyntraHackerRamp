<% layout('layouts/boilerplate') %>

    <% for( let post of posts ) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(post.image){ %>
                        <img src="<%=post.image%>" alt="" class="img-fluid">
                    <% }else{ %>
                        <img src="https://source.unsplash.com/collection/3356576/1600x900"
                            alt="" class="img-fluid">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= post.author.username %>
                        </h5>
                        <p class="card-text">
                            <%= post.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= post.likes %>
                            </small>
                        </p>
                        <a href="/posts/<%= post.id %> " class="btn btn-primary">View <%= post.PGname %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>